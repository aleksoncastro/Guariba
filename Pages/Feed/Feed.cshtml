@page "/feed"
@model Guariba.Pages.FeedModel
@{
    ViewData["Title"] = "Feed";
}

<div class="feed-container">
    <aside class="sidebar">
        <div class="logo">
            <h1>Guariba</h1>
        </div>
        <nav class="nav-menu">
            <a href="/Feed" class="nav-item active">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L2 7v10c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V7l-10-5z" />
                </svg>
                <span>Feed</span>
            </a>
            <a href="/Profile" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" />
                </svg>
                <span>Perfil</span>
            </a>
            <a href="/Notifications" class="nav-item">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 22c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm6-6v-5c0-3.07-1.63-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.64 5.36 6 7.92 6 11v5l-2 2v1h16v-1l-2-2z" />
                </svg>
                <span>Notificações</span>
            </a>
        </nav>
    </aside>

    <main class="main-feed">
        <div class="feed-header">
            <h2>Feed</h2>
        </div>
        <form method="post" asp-page="/Post/Create" class="post-form">
            <div class="post-actions">
                <button type="submit" class="post-btn">Postar</button>
            </div>
        </form>

  

        <div class="posts-list">
            @if (Model.Posts != null && Model.Posts.Any())
            {
                @foreach (var post in Model.Posts)
                {
                    <article class="post-card">
                        <div class="post-avatar">
                            <div class="avatar-placeholder">
                                @post.User?.UserName?.Substring(0, 1).ToUpper()
                            </div>
                        </div>
                        <div class="post-content">
                            <div class="post-header">
                                <div class="post-user-info">
                                    <span class="post-username">@(post.User?.UserName ?? "Usuário")</span>
                                    <span class="post-handle">&#64;@(post.User?.Email?.Split("@")[0] ?? "user")</span>
                                    <span class="post-dot">·</span>
                                    <span class="post-time">@GetTimeAgo(post.CreatedAt)</span>
                                </div>
                                <button class="post-menu-btn">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M12 8c1.1 0 2-.9 2-2s-.9-2-2-2-2 .9-2 2 .9 2 2 2zm0 2c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm0 6c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" />
                                    </svg>
                                </button>
                            </div>
                            <div class="post-text">
                                @post.TextContent
                            </div>
                            <div class="post-actions-bar">
                                <button class="action-btn comment-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" />
                                    </svg>
                                    <span>@(post.CommentsCount ?? 0)</span>
                                </button>
                                <button class="action-btn retweet-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M17 1l4 4-4 4" />
                                        <path d="M3 11V9a4 4 0 0 1 4-4h14" />
                                        <path d="M7 23l-4-4 4-4" />
                                        <path d="M21 13v2a4 4 0 0 1-4 4H3" />
                                    </svg>
                                    <span>@(post.RetweetsCount ?? 0)</span>
                                </button>
                                <button class="action-btn like-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                                    </svg>
                                    <span>@(post.LikesCount ?? 0)</span>
                                </button>
                                <button class="action-btn share-btn">
                                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M4 12v8a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-8" />
                                        <polyline points="16 6 12 2 8 6" />
                                        <line x1="12" y1="2" x2="12" y2="15" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </article>
                }
            }
            else
            {
                <div class="empty-feed">
                    <p>Nenhum post ainda. Seja o primeiro a postar!</p>
                </div>
            }
        </div>
    </main>

    <aside class="right-sidebar">
        <div class="search-box">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z" />
            </svg>
            <input type="text" placeholder="Buscar no Guariba" />
        </div>

        <div class="trends-card">
            <h3>Tendências para você</h3>
            <div class="trend-item">
                <div class="trend-info">
                    <span class="trend-category">Tecnologia · Trending</span>
                    <span class="trend-topic">#RazorPages</span>
                    <span class="trend-posts">1.234 posts</span>
                </div>
            </div>
            <div class="trend-item">
                <div class="trend-info">
                    <span class="trend-category">Programação · Trending</span>
                    <span class="trend-topic">#CSharp</span>
                    <span class="trend-posts">5.678 posts</span>
                </div>
            </div>
            <div class="trend-item">
                <div class="trend-info">
                    <span class="trend-category">Desenvolvimento · Trending</span>
                    <span class="trend-topic">#DotNet</span>
                    <span class="trend-posts">3.456 posts</span>
                </div>
            </div>
        </div>

        <div class="suggestions-card">
            <h3>Quem seguir</h3>
            <div class="suggestion-item">
                <div class="avatar-placeholder small">D</div>
                <div class="suggestion-info">
                    <span class="suggestion-name">Dev Community</span>
                    <span class="suggestion-handle">&#64;devcommunity</span>
                </div>
                <button class="follow-btn">Seguir</button>
            </div>
            <div class="suggestion-item">
                <div class="avatar-placeholder small">T</div>
                <div class="suggestion-info">
                    <span class="suggestion-name">Tech News</span>
                    <span class="suggestion-handle">&#64;technews</span>
                </div>
                <button class="follow-btn">Seguir</button>
            </div>
        </div>
    </aside>
</div>

@functions {
    private string GetTimeAgo(DateTime createdAt)
    {
        var timeSpan = DateTime.Now - createdAt;

        if (timeSpan.TotalMinutes < 1)
            return "agora";
        if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes}m";
        if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours}h";
        if (timeSpan.TotalDays < 7)
            return $"{(int)timeSpan.TotalDays}d";

        return createdAt.ToString("dd/MM/yyyy");
    }
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: #000;
        color: #e7e9ea;
    }

    .feed-container {
        display: grid;
        grid-template-columns: 275px 600px 350px;
        justify-content: center; /* Centraliza as colunas no espaço disponível */
        max-width: 1280px;
        margin: 0 auto;
        min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        padding: 20px;
        border-right: 1px solid #2f3336;
    }

    .logo h1 {
        font-size: 28px;
        font-weight: bold;
        color: #1d9bf0;
        margin-bottom: 30px;
    }

    .nav-menu {
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .nav-item {
        display: flex;
        align-items: center;
        gap: 16px;
        padding: 12px 16px;
        border-radius: 24px;
        color: #e7e9ea;
        text-decoration: none;
        font-size: 20px;
        font-weight: 400;
        transition: background-color 0.2s;
    }

        .nav-item:hover {
            background-color: #181818;
        }

        .nav-item.active {
            font-weight: 700;
        }

        .nav-item svg {
            width: 26px;
            height: 26px;
        }

    /* Main Feed */
    .main-feed {
        border-right: 1px solid #2f3336;
        min-height: 100vh;
        /* Removido o border-left para evitar borda dupla quando a sidebar some */
    }

    .feed-header {
        position: sticky;
        top: 0;
        background-color: rgba(0, 0, 0, 0.65);
        backdrop-filter: blur(12px);
        padding: 16px 20px;
        border-bottom: 1px solid #2f3336;
        z-index: 10;
    }

        .feed-header h2 {
            font-size: 20px;
            font-weight: 700;
        }

    /* Create Post */
    .create-post {
        display: flex;
        gap: 12px;
        padding: 16px 20px;
        border-bottom: 1px solid #2f3336;
    }

    .post-avatar {
        flex-shrink: 0;
    }

    .avatar-placeholder {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, #1d9bf0, #0c7abf);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-weight: 600;
        font-size: 20px;
    }

        .avatar-placeholder.small {
            width: 40px;
            height: 40px;
            font-size: 16px;
        }

    .post-form {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

        .post-form textarea {
            background: transparent;
            border: none;
            color: #e7e9ea;
            font-size: 20px;
            font-family: inherit;
            resize: none;
            outline: none;
        }

            .post-form textarea::placeholder {
                color: #71767b;
            }

    .post-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 12px;
        /* Removida a borda, o create-post já tem uma borda inferior */
    }

    .post-icons {
        display: flex;
        gap: 8px;
    }

    .icon-btn {
        background: transparent;
        border: none;
        color: #1d9bf0;
        cursor: pointer;
        padding: 8px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.2s;
    }

        .icon-btn:hover {
            background-color: rgba(29, 155, 240, 0.1);
        }

    .post-btn {
        background-color: #1d9bf0;
        color: white;
        border: none;
        padding: 8px 24px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .post-btn:hover {
            background-color: #1a8cd8;
        }

    /* Posts List */
    .posts-list {
        display: flex;
        flex-direction: column;
    }

    .post-card {
        display: flex;
        gap: 12px;
        padding: 16px 20px;
        border-bottom: 1px solid #2f3336;
        transition: background-color 0.2s;
        cursor: pointer;
    }

        .post-card:hover {
            background-color: rgba(255, 255, 255, 0.03);
        }

    .post-content {
        flex: 1;
        min-width: 0;
    }

    .post-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 4px;
    }

    .post-user-info {
        display: flex;
        align-items: center;
        gap: 6px;
        flex-wrap: wrap;
    }

    .post-username {
        font-weight: 700;
        color: #e7e9ea;
        font-size: 15px;
    }

    .post-handle,
    .post-time {
        color: #71767b;
        font-size: 15px;
    }

    .post-dot {
        color: #71767b;
    }

    .post-menu-btn {
        background: transparent;
        border: none;
        color: #71767b;
        cursor: pointer;
        padding: 4px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s;
    }

        .post-menu-btn:hover {
            background-color: rgba(29, 155, 240, 0.1);
            color: #1d9bf0;
        }

    .post-text {
        color: #e7e9ea;
        font-size: 15px;
        line-height: 1.5;
        margin-bottom: 12px;
        word-wrap: break-word;
    }

    .post-actions-bar {
        display: flex;
        justify-content: space-between;
        max-width: 425px;
        margin-top: 12px;
    }

    .action-btn {
        background: transparent;
        border: none;
        color: #71767b;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px;
        border-radius: 50%; /* Faz o hover ficar circular */
        font-size: 13px;
        transition: all 0.2s;
    }

        .action-btn span {
            transition: color 0.2s;
        }

        .action-btn:hover span {
            color: #1d9bf0;
        }

        .action-btn.comment-btn:hover {
            color: #1d9bf0;
            background-color: rgba(29, 155, 240, 0.1);
        }

        .action-btn.retweet-btn:hover {
            color: #00ba7c;
            background-color: rgba(0, 186, 124, 0.1);
        }

            .action-btn.retweet-btn:hover span {
                color: #00ba7c;
            }

        .action-btn.like-btn:hover {
            color: #f91880;
            background-color: rgba(249, 24, 128, 0.1);
        }

            .action-btn.like-btn:hover span {
                color: #f91880;
            }

        .action-btn.share-btn:hover {
            color: #1d9bf0;
            background-color: rgba(29, 155, 240, 0.1);
        }

    .empty-feed {
        padding: 40px 20px;
        text-align: center;
        color: #71767b;
    }

    /* Right Sidebar */
    .right-sidebar {
        position: sticky;
        top: 0;
        height: 100vh;
        padding: 20px;
        overflow-y: auto;
    }

    .search-box {
        position: relative;
        margin-bottom: 20px;
    }

        .search-box svg {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #71767b;
        }

        .search-box input {
            width: 100%;
            background-color: #202327;
            border: 1px solid transparent;
            border-radius: 24px;
            padding: 12px 16px 12px 48px;
            color: #e7e9ea;
            font-size: 15px;
            outline: none;
            transition: all 0.2s;
        }

            .search-box input:focus {
                background-color: transparent;
                border-color: #1d9bf0;
            }

            .search-box input::placeholder {
                color: #71767b;
            }

    .trends-card,
    .suggestions-card {
        background-color: #16181c;
        border-radius: 16px;
        padding: 16px;
        margin-bottom: 20px;
    }

        .trends-card h3,
        .suggestions-card h3 {
            font-size: 20px;
            font-weight: 800;
            margin-bottom: 16px;
        }

    .trend-item {
        padding: 12px 0;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .trend-item:hover {
            background-color: rgba(255, 255, 255, 0.03);
        }

    .trend-info {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .trend-category {
        color: #71767b;
        font-size: 13px;
    }

    .trend-topic {
        color: #e7e9ea;
        font-weight: 700;
        font-size: 15px;
    }

    .trend-posts {
        color: #71767b;
        font-size: 13px;
    }

    .suggestion-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 0;
    }

    .suggestion-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .suggestion-name {
        color: #e7e9ea;
        font-weight: 700;
        font-size: 15px;
    }

    .suggestion-handle {
        color: #71767b;
        font-size: 14px;
    }

    .follow-btn {
        background-color: #eff3f4;
        color: #0f1419;
        border: none;
        padding: 6px 16px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 14px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .follow-btn:hover {
            background-color: #d7dbdc;
        }

    /* --- Responsive --- */
    /* CORRIGIDO */
    @@media (max-width: 1280px) {
        .feed-container {
            grid-template-columns: 88px 600px 1fr;
            max-width: 100%; /* Ocupa a largura total */
        }

        .sidebar {
            padding: 20px 12px;
            display: flex;
            flex-direction: column;
            align-items: center; /* Centraliza os ícones */
        }

        .nav-item span {
            display: none;
        }

        .logo h1 {
            font-size: 24px;
            text-align: center;
        }
    }

    /* CORRIGIDO */
    @@media (max-width: 1024px) {
        .right-sidebar {
            display: none;
        }

        .feed-container {
            grid-template-columns: 88px 1fr;
        }
    }

    /* CORRIGIDO */
    @@media (max-width: 768px) {
        .feed-container {
            grid-template-columns: 1fr;
        }

        .sidebar {
            display: none;
        }

        .main-feed {
            border-left: none;
            border-right: none;
        }
    }
</style>