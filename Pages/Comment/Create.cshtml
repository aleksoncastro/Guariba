@page
@model Guariba.Pages.Comment.CreateModel

@{
    ViewData["Title"] = "Adicionar Comentário";
}

<style>
    body {
        background-color: #000000;
        color: #E7E9EA;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .twitter-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
    }

    .twitter-header {
        display: flex;
        align-items: center;
        padding: 16px 0;
        border-bottom: 1px solid #2F3336;
        margin-bottom: 20px;
    }

        .twitter-header h1 {
            font-size: 20px;
            font-weight: 700;
            margin: 0;
            color: #E7E9EA;
        }

    .comment-card {
        background-color: #000000;
        border: 1px solid #2F3336;
        border-radius: 16px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 15px;
        font-weight: 700;
        color: #E7E9EA;
        margin-bottom: 12px;
    }

    .twitter-textarea {
        width: 100%;
        background-color: #000000;
        border: 1px solid #2F3336;
        border-radius: 12px;
        color: #E7E9EA;
        font-size: 17px;
        padding: 12px 16px;
        resize: vertical;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

        .twitter-textarea:focus {
            outline: none;
            border-color: #1D9BF0;
        }

        .twitter-textarea::placeholder {
            color: #71767B;
        }

    .text-danger {
        color: #F4212E;
        font-size: 13px;
        margin-top: 8px;
        display: block;
    }

    .button-group {
        display: flex;
        gap: 12px;
        margin-top: 20px;
    }

    .twitter-button {
        background-color: #1D9BF0;
        color: #FFFFFF;
        border: none;
        border-radius: 9999px;
        padding: 12px 24px;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

        .twitter-button:hover {
            background-color: #1A8CD8;
        }

        .twitter-button:active {
            background-color: #1876BA;
        }

    .cancel-link {
        display: inline-flex;
        align-items: center;
        color: #1D9BF0;
        text-decoration: none;
        font-size: 15px;
        font-weight: 700;
        padding: 12px 24px;
        border-radius: 9999px;
        transition: background-color 0.2s;
    }

        .cancel-link:hover {
            background-color: rgba(29, 155, 240, 0.1);
            color: #1D9BF0;
        }

    .validation-summary {
        background-color: rgba(244, 33, 46, 0.1);
        border: 1px solid #F4212E;
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 20px;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 20px;
            color: #F4212E;
        }
</style>

<div class="twitter-container">
    <div class="twitter-header">
        <h1>Adicionar Comentário</h1>
    </div>

    <div class="comment-card">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Comment.Text" class="form-label">Seu Comentário</label>
                <textarea asp-for="Comment.Text"
                          class="twitter-textarea"
                          rows="6"
                          placeholder="Escreva seu comentário..."></textarea>
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PostId" />

            <div class="button-group">
                <button type="submit" class="twitter-button">Comentar</button>
                <a asp-page="/Post/Details" asp-route-id="@Model.PostId" class="cancel-link">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
