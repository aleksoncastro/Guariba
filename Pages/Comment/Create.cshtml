@page
@model Guariba.Pages.Comment.CreateModel

@{
    ViewData["Title"] = "Adicionar Comentário";
}

<h1>Adicionar Comentário</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label">Seu Comentário</label>
                <textarea asp-for="Comment.Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PostId" />

            <div class="form-group mt-3">
                <input type="submit" value="Comentar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/Post/Details" asp-route-id="@Model.PostId">Cancelar</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}