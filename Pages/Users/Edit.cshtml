@page "/users/edit"
@model Guariba.Pages.Users.EditModel

@{
    ViewData["Title"] = "Editar Perfil";
}

<style>
    /* Seus estilos CSS permanecem aqui */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: #000000;
        color: #e7e9ea;
        padding: 20px;
    }

    .edit-container {
        max-width: 600px;
        margin: 0 auto;
        background-color: #000000;
    }

    .header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 12px 16px;
        border-bottom: 1px solid #2f3336;
        margin-bottom: 24px;
    }

    .header-left {
        display: flex;
        align-items: center;
        gap: 32px;
    }

    .header h1 {
        font-size: 20px;
        font-weight: 700;
        color: #e7e9ea;
    }

    .back-link {
        color: #e7e9ea;
        text-decoration: none;
        font-size: 20px;
        transition: color 0.2s;
    }

        .back-link:hover {
            color: #1d9bf0;
        }

    .save-btn-header {
        background-color: #1d9bf0;
        color: #ffffff;
        border: none;
        border-radius: 20px;
        padding: 8px 16px;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .save-btn-header:hover {
            background-color: #1a8cd8;
        }

    .form-container {
        padding: 0 16px;
    }

    .form-group {
        margin-bottom: 24px;
    }

        .form-group label {
            display: block;
            font-size: 15px;
            font-weight: 700;
            color: #e7e9ea;
            margin-bottom: 8px;
        }

    .required {
        color: #f4212e;
        margin-right: 4px;
    }

    .form-control {
        width: 100%;
        background-color: #000000;
        border: 1px solid #2f3336;
        border-radius: 4px;
        padding: 12px;
        font-size: 15px;
        color: #e7e9ea;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            outline: none;
            border-color: #1d9bf0;
        }

        .form-control::placeholder {
            color: #71767b;
        }

    .text-danger {
        color: #f4212e;
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .photo-upload {
        display: flex;
        align-items: center;
        gap: 16px;
    }

    .photo-preview {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background-color: #16181c;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

        .photo-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .photo-placeholder {
        font-size: 32px;
        color: #71767b;
    }

    .interests-section {
        background-color: #16181c;
        border-radius: 16px;
        padding: 16px;
    }

        .interests-section label {
            font-size: 17px;
            font-weight: 700;
            margin-bottom: 16px;
        }

    .checkbox-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 12px;
    }

    .form-check {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        border: 2px solid #2f3336;
        border-radius: 4px;
        background-color: #000000;
        cursor: pointer;
        appearance: none;
        transition: all 0.2s;
    }

        .form-check-input:checked {
            background-color: #1d9bf0;
            border-color: #1d9bf0;
            position: relative;
        }

            .form-check-input:checked::after {
                content: '✓';
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                color: #ffffff;
                font-size: 14px;
                font-weight: bold;
            }

    .form-check-label {
        color: #e7e9ea;
        font-size: 15px;
        cursor: pointer;
    }

    .info-text {
        color: #71767b;
        font-size: 13px;
        margin-top: 8px;
    }

    .date-info {
        background-color: #16181c;
        border-radius: 8px;
        padding: 12px;
        font-size: 14px;
        color: #71767b;
    }

    input[type="hidden"] {
        display: none;
    }

    @@media (max-width: 600px) {
        .checkbox-list {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="edit-container">
    <div class="header">
        <div class="header-left">
            @* CORREÇÃO: Link para a página de perfil usando Tag Helper *@
            <a asp-page="/profile" class="back-link" title="Cancelar">✕</a>
            <h1>Editar Perfil</h1>
        </div>
        <button type="submit" form="editForm" class="save-btn-header">Salvar</button>
    </div>

    <div class="form-container">
        <form method="post" id="editForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />

            <div class="form-group">
                <label asp-for="User.UserName" class="control-label">
                    <span class="required">*</span>Nome de usuário
                </label>
                <input asp-for="User.UserName" class="form-control" placeholder="Digite seu nome de usuário" />
                <span asp-validation-for="User.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.Email" class="control-label">Email</label>
                <input asp-for="User.Email" class="form-control" type="email" placeholder="Digite seu email" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.ProfilePhoto" class="control-label">URL da Foto de Perfil</label>
                <div class="photo-upload">
                    <div class="photo-preview">
                        @if (!string.IsNullOrEmpty(Model.User.ProfilePhoto))
                        {
                            <img src="@Model.User.ProfilePhoto" alt="Profile" />
                        }
                        else
                        {
                            <span class="photo-placeholder">👤</span>
                        }
                    </div>
                    <div style="flex: 1;">
                        <input asp-for="User.ProfilePhoto" class="form-control" placeholder="https://exemplo.com/foto.jpg" />
                        <span class="info-text">Cole a URL da sua foto de perfil</span>
                    </div>
                </div>
                <span asp-validation-for="User.ProfilePhoto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="User.RegistrationDat" class="control-label">Data de Registro</label>
                <div class="date-info">
                    Membro desde: @Model.User.RegistrationDat.ToString("MMMM dd, yyyy")
                </div>
                <input type="hidden" asp-for="User.RegistrationDat" />
            </div>

            <div class="form-group interests-section">
                <label class="control-label">Interesses</label>
                <div class="checkbox-list">
                    @* Este trecho presume que o seu EditModel.cs tem uma propriedade chamada AllInterests *@
                    @if (Model.AllInterests != null)
                    {
                        @foreach (var interestOption in Model.AllInterests)
                        {
                            <div class="form-check">
                                <input class="form-check-input"
                                       type="checkbox"
                                       name="SelectedInterests"
                                       value="@interestOption.Value"
                                       id="interest-@interestOption.Value"
                                       checked="@interestOption.Selected" />
                                <label class="form-check-label" for="interest-@interestOption.Value">
                                    @interestOption.Text
                                </label>
                            </div>
                        }
                    }
                </div>
                <span class="info-text">Selecione seus interesses para personalizar sua experiência</span>
            </div>

            @* Estes campos ocultos são importantes para manter dados que não são editados no formulário *@
            <input type="hidden" asp-for="User.PasswordHash" />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}