@page
@model Guariba.Pages.Users.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.Id" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="User.Username" class="control-label"></label>
                <input asp-for="User.Username" class="form-control" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Password" class="control-label"></label>
                <input asp-for="User.Password" class="form-control" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.RegistrationDat" class="control-label"></label>
                <input asp-for="User.RegistrationDat" class="form-control" />
                <span asp-validation-for="User.RegistrationDat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.ProfilePhoto" class="control-label"></label>
                <input asp-for="User.ProfilePhoto" class="form-control" />
                <span asp-validation-for="User.ProfilePhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Interests</label>
                <div class="checkbox-list">
                    @foreach (var interestOption in Model.AllInterests)
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SelectedInterests"
                                   value="@interestOption.Value"
                                   id="interest-@interestOption.Value"
                                   checked="@interestOption.Selected" />
                            <label class="form-check-label" for="interest-@interestOption.Value">
                                @interestOption.Text
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
