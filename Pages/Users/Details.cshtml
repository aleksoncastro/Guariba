@page
@model Guariba.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PasswordHash)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PasswordHash)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.RegistrationDat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.RegistrationDat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.ProfilePhoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.ProfilePhoto)
        </dd>
        <dt class="col-sm-2">
            Interests
        </dt>
        <dd class="col-sm-10">
            @if (Model.User.UserInterests != null && Model.User.UserInterests.Any())
            {
                @string.Join(", ", Model.User.UserInterests.Select(ui => ui.Interest.ToString()))
            }
            else
            {
                <span>No interests listed.</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.User.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
