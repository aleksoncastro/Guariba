@page
@model Guariba.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.RegistrationDat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.RegistrationDat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.ProfilePhoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.ProfilePhoto)
        </dd>
        <dt class="col-sm-2">
            Interesses
        </dt>
        <dd class="col-sm-10">
            @if (Model.User.UserInterests != null && Model.User.UserInterests.Any())
            {
                @* Isso junta todos os interesses em uma única string, separados por ", " *@
                @string.Join(", ", Model.User.UserInterests.Select(ui => ui.Interest.ToString()))
            }
            else
            {
                <span>Nenhum interesse informado.</span>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="User.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
