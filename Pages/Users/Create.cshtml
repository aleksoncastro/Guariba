@page "/registrar-usuario"
@model Guariba.Pages.Users.CreateModel

@{
    ViewData["Title"] = "Criar Conta";
}

<div class="form-container">
    <div class="form-header">
        <h1>Criar sua conta</h1>
        <h4>Preencha os campos abaixo para se registrar.</h4>
    </div>
    <hr />
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="User.Username" class="control-label"></label>
            <input asp-for="User.Username" class="form-control" placeholder="Como você quer ser chamado?" />
            <span asp-validation-for="User.Username" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Email" class="control-label"></label>
            <input asp-for="User.Email" class="form-control" placeholder="seu-email@exemplo.com" />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.Password" class="control-label"></label>
            <input asp-for="User.Password" class="form-control" type="password" placeholder="Crie uma senha segura" />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="User.RegistrationDat" class="control-label">Data de Registro</label>
            <input asp-for="User.RegistrationDat" class="form-control" type="date" />
            <span asp-validation-for="User.RegistrationDat" class="text-danger"></span>
        </div>

        <div class="form-group-submit">
            <input type="submit" value="Criar Conta" class="btn-submit" />
        </div>
    </form>

    <div class="back-link">
        <a asp-page="Index">← Voltar para a lista</a>
    </div>
</div>

<style>
    /* Estilos Globais */
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: #000;
        color: #e7e9ea;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 20px 0; /* Adiciona uma margem para telas menores */
    }

    /* Container do Formulário */
    .form-container {
        width: 100%;
        max-width: 480px;
        background-color: #16181c;
        border-radius: 16px;
        padding: 24px 32px;
        border: 1px solid #2f3336;
    }

    .form-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #e7e9ea;
        margin-bottom: 8px;
    }

    .form-header h4 {
        font-size: 16px;
        font-weight: 400;
        color: #71767b;
        margin-bottom: 20px;
    }

    hr {
        border: none;
        height: 1px;
        background-color: #2f3336;
        margin-bottom: 24px;
    }

    /* Grupos de Campos */
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        display: block;
        font-weight: 600;
        font-size: 15px;
        color: #e7e9ea;
        margin-bottom: 8px;
    }

    /* Campos de Input */
    .form-control {
        width: 100%;
        background-color: #202327;
        border: 1px solid #38444d;
        border-radius: 8px;
        padding: 12px 16px;
        color: #e7e9ea;
        font-size: 16px;
        outline: none;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #1d9bf0;
            box-shadow: 0 0 0 2px rgba(29, 155, 240, 0.2);
        }

        .form-control::placeholder {
            color: #71767b;
        }

    /* Mensagens de Validação */
    .text-danger {
        color: #f91880; /* Cor de "like" para erros, bem visível */
        font-size: 14px;
        margin-top: 6px;
    }

    /* Botão de Envio */
    .form-group-submit {
        margin-top: 24px;
        margin-bottom: 20px;
    }

    .btn-submit {
        width: 100%;
        background-color: #1d9bf0;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-submit:hover {
            background-color: #1a8cd8;
        }

    /* Link de "Voltar" */
    .back-link {
        text-align: center;
        margin-top: 20px;
    }

        .back-link a {
            color: #1d9bf0;
            text-decoration: none;
            font-size: 15px;
            transition: text-decoration 0.2s;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}