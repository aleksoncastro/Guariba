@page
@model Guariba.Pages.Post.CreateModel

@{
    ViewData["Title"] = "Create Post";
    Layout = "_Layout";
}

<style>
    body {
        background-color: #000;
        color: #e7e9ea;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    .post-container {
        max-width: 600px;
        margin: 40px auto;
        background-color: #15202b;
        border-radius: 16px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .post-header {
        font-size: 20px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #e7e9ea;
    }

    .post-form {
        display: flex;
        flex-direction: column;
        gap: 16px;
    }

    .form-group {
        margin-bottom: 0;
    }

    .form-control {
        background-color: #192734;
        border: 1px solid #38444d;
        color: #e7e9ea;
        border-radius: 8px;
        padding: 12px;
        font-size: 16px;
        resize: vertical;
        min-height: 120px;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            background-color: #192734;
            border-color: #1d9bf0;
            color: #e7e9ea;
            outline: none;
            box-shadow: 0 0 0 1px #1d9bf0;
        }

        .form-control::placeholder {
            color: #71767b;
        }

    .image-preview-container {
        position: relative;
        display: none;
        margin-top: 12px;
    }

        .image-preview-container.show {
            display: block;
        }

    .image-preview {
        width: 100%;
        max-height: 300px;
        object-fit: cover;
        border-radius: 12px;
        border: 1px solid #38444d;
    }

    .remove-image {
        position: absolute;
        top: 8px;
        right: 8px;
        background-color: rgba(0, 0, 0, 0.75);
        color: #fff;
        border: none;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        font-size: 18px;
        transition: background-color 0.2s;
    }

        .remove-image:hover {
            background-color: rgba(0, 0, 0, 0.9);
        }

    .post-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 12px;
        border-top: 1px solid #38444d;
    }

    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-icon {
        background-color: transparent;
        border: none;
        color: #1d9bf0;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-icon:hover {
            background-color: rgba(29, 155, 240, 0.1);
        }

        .btn-icon svg {
            width: 20px;
            height: 20px;
            fill: currentColor;
        }

    .btn-post {
        background-color: #1d9bf0;
        color: #fff;
        border: none;
        border-radius: 20px;
        padding: 8px 24px;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-post:hover {
            background-color: #1a8cd8;
        }

        .btn-post:disabled {
            background-color: #1d9bf0;
            opacity: 0.5;
            cursor: not-allowed;
        }

    .text-danger {
        color: #f4212e;
        font-size: 13px;
        margin-top: 4px;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        color: #1d9bf0;
        text-decoration: none;
        font-size: 15px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .file-input {
        display: none;
    }

    label {
        display: none;
    }
</style>

<div class="post-container">
    <h1 class="post-header">Create Post</h1>

    <form method="post" class="post-form" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <textarea asp-for="Post.TextContent"
                      class="form-control"
                      placeholder="What's happening?"
                      rows="4"></textarea>
            <span asp-validation-for="Post.TextContent" class="text-danger"></span>
        </div>

        <input type="file"
               asp-for="ImageFile" id="imageInput"
               class="file-input"
               accept="image/*"
               onchange="previewImage(event)" />

        <div id="imagePreviewContainer" class="image-preview-container">
            <button type="button" class="remove-image" onclick="removeImage()">×</button>
        </div>

        <div class="post-actions">
            <button type="submit" class="btn-post">Post</button>
        </div>
    </form>

@section Scripts {
    @{
       await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

        <script>
            function previewImage(event) {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        document.getElementById('imagePreview').src = e.target.result;
                        document.getElementById('imagePreviewContainer').classList.add('show');
                        // A linha abaixo não é mais necessária, pois o ASP.NET Core cuidará do arquivo
                        // document.getElementById('imageUrlInput').value = e.target.result;
                    }
                    reader.readAsDataURL(file);
                }
            }

            function removeImage() {
                document.getElementById('imageInput').value = '';
                // A linha abaixo não é mais necessária
                // document.getElementById('imageUrlInput').value = '';
                document.getElementById('imagePreviewContainer').classList.remove('show');
                document.getElementById('imagePreview').src = '/images/placeholder.svg'; // Volta pro placeholder
            }
    </script>
}
