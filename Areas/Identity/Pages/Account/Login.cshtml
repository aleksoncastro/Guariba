@page "/login"
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<style>
    body {
        background-color: #000000;
        color: #E7E9EA;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0;
        padding: 20px;
    }

    .twitter-login-container {
        max-width: 600px;
        width: 100%;
        background-color: #000000;
        padding: 40px;
    }

    .twitter-logo {
        font-size: 32px;
        font-weight: bold;
        color: #1D9BF0;
        margin-bottom: 32px;
        text-align: center;
    }

    .twitter-login-card {
        background-color: #000000;
        border-radius: 16px;
        padding: 0;
    }

    .twitter-title {
        font-size: 31px;
        font-weight: 700;
        color: #E7E9EA;
        margin-bottom: 32px;
        text-align: center;
    }

    .twitter-form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .twitter-input {
        width: 100%;
        padding: 16px;
        background-color: #000000;
        border: 1px solid #333639;
        border-radius: 4px;
        color: #E7E9EA;
        font-size: 17px;
        transition: all 0.2s;
        outline: none;
    }

        .twitter-input:focus {
            border-color: #1D9BF0;
            background-color: #000000;
        }

        .twitter-input::placeholder {
            color: #71767B;
        }

    .twitter-label {
        position: absolute;
        left: 16px;
        top: 16px;
        color: #71767B;
        font-size: 17px;
        pointer-events: none;
        transition: all 0.2s;
    }

    .twitter-input:focus + .twitter-label,
    .twitter-input:not(:placeholder-shown) + .twitter-label {
        top: 4px;
        font-size: 13px;
        color: #1D9BF0;
    }

    .twitter-checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

        .twitter-checkbox input[type="checkbox"] {
            width: 20px;
            height: 20px;
            margin-right: 12px;
            accent-color: #1D9BF0;
        }

        .twitter-checkbox label {
            color: #E7E9EA;
            font-size: 15px;
            margin: 0;
        }

    .twitter-btn {
        width: 100%;
        padding: 16px;
        background-color: #1D9BF0;
        color: #FFFFFF;
        border: none;
        border-radius: 9999px;
        font-size: 17px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-bottom: 20px;
    }

        .twitter-btn:hover {
            background-color: #1A8CD8;
        }

        .twitter-btn:active {
            background-color: #1876BA;
        }

    .twitter-links {
        text-align: center;
        margin-top: 24px;
    }

    .twitter-link {
        color: #1D9BF0;
        text-decoration: none;
        font-size: 15px;
        display: block;
        margin-bottom: 12px;
        transition: color 0.2s;
    }

        .twitter-link:hover {
            color: #1A8CD8;
            text-decoration: underline;
        }

    .twitter-divider {
        display: flex;
        align-items: center;
        margin: 32px 0;
        color: #71767B;
        font-size: 15px;
    }

        .twitter-divider::before,
        .twitter-divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background-color: #2F3336;
        }

        .twitter-divider span {
            padding: 0 16px;
        }

    .twitter-external-btn {
        width: 100%;
        padding: 12px;
        background-color: #FFFFFF;
        color: #0F1419;
        border: 1px solid #536471;
        border-radius: 9999px;
        font-size: 15px;
        font-weight: 700;
        cursor: pointer;
        transition: background-color 0.2s;
        margin-bottom: 12px;
    }

        .twitter-external-btn:hover {
            background-color: #E7E9EA;
        }

    .text-danger {
        color: #F4212E;
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    .validation-summary {
        background-color: #200A0A;
        border: 1px solid #F4212E;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 20px;
        color: #F4212E;
        font-size: 15px;
    }

    .twitter-external-section {
        margin-top: 40px;
    }

    .twitter-section-title {
        font-size: 20px;
        font-weight: 700;
        color: #E7E9EA;
        margin-bottom: 20px;
        text-align: center;
    }

    .twitter-external-info {
        background-color: #16181C;
        border-radius: 12px;
        padding: 16px;
        color: #71767B;
        font-size: 15px;
        text-align: center;
    }

        .twitter-external-info a {
            color: #1D9BF0;
            text-decoration: none;
        }

            .twitter-external-info a:hover {
                text-decoration: underline;
            }
</style>

<div class="twitter-login-container">
    <div class="twitter-logo">Guariba</div>

    <div class="twitter-login-card">
       <h1 class="twitter-title">Sign in to X</h1>

        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

                <div class="twitter-form-group">
                    <input asp-for="Input.Email" class="twitter-input" autocomplete="username" aria-required="true" placeholder=" " />
                    <label asp-for="Input.Email" class="twitter-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="twitter-form-group">
                    <input asp-for="Input.Password" class="twitter-input" autocomplete="current-password" aria-required="true" placeholder=" " />
                    <label asp-for="Input.Password" class="twitter-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="twitter-checkbox">
                    <input class="form-check-input" asp-for="Input.RememberMe" type="checkbox" />
                    <label asp-for="Input.RememberMe">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <button id="login-submit" type="submit" class="twitter-btn">Log in</button>

                <div class="twitter-links">
                    <a id="forgot-password" asp-page="./ForgotPassword" class="twitter-link">Forgot your password?</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="twitter-link">Resend email confirmation</a>
                </div>
            </form>
        </section>

        @if ((Model.ExternalLogins?.Count ?? 0) > 0)
        {
            <div class="twitter-divider">
                <span>or</span>
            </div>

            <section class="twitter-external-section">
                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    @foreach (var provider in Model.ExternalLogins!)
                    {
                        <button type="submit" class="twitter-external-btn" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                            Continue with @provider.DisplayName
                        </button>
                    }
                </form>
            </section>
        }
        else
        {
            <div class="twitter-divider">
                <span>or</span>
            </div>

            <div class="twitter-external-info">
                <p>
                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article about setting up external services</a>.
                </p>
            </div>
        }

        <div class="twitter-divider"></div>

        <div style="text-align: center;">
            <span style="color: #71767B; font-size: 15px;">Don't have an account? </span>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="twitter-link" style="display: inline;">Sign up</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
