@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="form-container">
    <div class="form-header">
        <h1>Criar sua conta</h1>
        <h4>Preencha os campos abaixo para se registrar.</h4>
    </div>
    <hr />
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.UserName" class="control-label">Nome de Usuário</label>
            <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="Como você quer ser chamado?" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Email" class="control-label">Email</label>
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="seu-email@exemplo.com" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Password" class="control-label">Senha</label>
            <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Crie uma senha segura" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="control-label">Confirmar Senha</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Digite a senha novamente" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group-submit">
            <button id="registerSubmit" type="submit" class="btn-submit">Criar Conta</button>
        </div>
    </form>

    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
    {
        <div class="divider">
            <span>ou</span>
        </div>

        <div class="external-logins">
            <h3>Use outro serviço para registrar</h3>
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                @foreach (var provider in Model.ExternalLogins!)
                {
                    <button type="submit" class="btn-external" name="provider" value="@provider.Name" title="Registrar usando sua conta @provider.DisplayName">
                        <span>Continuar com @provider.DisplayName</span>
                    </button>
                }
            </form>
        </div>
    }

    <div class="back-link">
        <a asp-page="/Account/Login">Já tem uma conta? Faça login</a>
    </div>
</div>

<style>
    /* Estilos Globais */
    body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background-color: #000;
        color: #e7e9ea;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        margin: 20px 0;
    }

    /* Container do Formulário */
    .form-container {
        width: 100%;
        max-width: 480px;
        background-color: #16181c;
        border-radius: 16px;
        padding: 24px 32px;
        border: 1px solid #2f3336;
    }

    .form-header h1 {
        font-size: 28px;
        font-weight: 700;
        color: #e7e9ea;
        margin-bottom: 8px;
    }

    .form-header h4 {
        font-size: 16px;
        font-weight: 400;
        color: #71767b;
        margin-bottom: 20px;
    }

    hr {
        border: none;
        height: 1px;
        background-color: #2f3336;
        margin-bottom: 24px;
    }

    /* Grupos de Campos */
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        display: block;
        font-weight: 600;
        font-size: 15px;
        color: #e7e9ea;
        margin-bottom: 8px;
    }

    /* Campos de Input */
    .form-control {
        width: 100%;
        background-color: #202327;
        border: 1px solid #38444d;
        border-radius: 8px;
        padding: 12px 16px;
        color: #e7e9ea;
        font-size: 16px;
        outline: none;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control:focus {
            border-color: #1d9bf0;
            box-shadow: 0 0 0 2px rgba(29, 155, 240, 0.2);
        }

        .form-control::placeholder {
            color: #71767b;
        }

    /* Mensagens de Validação */
    .text-danger {
        color: #f91880;
        font-size: 14px;
        margin-top: 6px;
        display: block;
    }

    /* Botão de Envio */
    .form-group-submit {
        margin-top: 24px;
        margin-bottom: 20px;
    }

    .btn-submit {
        width: 100%;
        background-color: #1d9bf0;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

        .btn-submit:hover {
            background-color: #1a8cd8;
        }

    /* Divisor */
    .divider {
        position: relative;
        text-align: center;
        margin: 24px 0;
    }

        .divider::before {
            content: '';
            position: absolute;
            left: 0;
            top: 50%;
            width: 100%;
            height: 1px;
            background-color: #2f3336;
        }

        .divider span {
            position: relative;
            background-color: #16181c;
            padding: 0 16px;
            color: #71767b;
            font-size: 14px;
        }

    /* Logins Externos */
    .external-logins {
        margin-bottom: 20px;
    }

        .external-logins h3 {
            font-size: 16px;
            font-weight: 600;
            color: #e7e9ea;
            margin-bottom: 16px;
        }

    .btn-external {
        width: 100%;
        background-color: #202327;
        color: #e7e9ea;
        border: 1px solid #38444d;
        padding: 12px 24px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        transition: background-color 0.2s, border-color 0.2s;
        margin-bottom: 12px;
    }

        .btn-external:hover {
            background-color: #2a2d31;
            border-color: #1d9bf0;
        }

    /* Link de "Voltar" */
    .back-link {
        text-align: center;
        margin-top: 20px;
    }

        .back-link a {
            color: #1d9bf0;
            text-decoration: none;
            font-size: 15px;
            transition: text-decoration 0.2s;
        }

            .back-link a:hover {
                text-decoration: underline;
            }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
